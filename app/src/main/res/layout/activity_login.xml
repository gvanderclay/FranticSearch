<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/LoginActivity"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="vanderclay.comet.benson.franticsearch.ui.activities.LoginActivity">

    <TextView
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:text = "Login To FS"
        android:id = "@+id/textView"
        android:textAlignment="center"
        android:textColor = "@color/franticWhite"
        android:background="@color/franticBlue"
        android:textSize = "35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="71dp" />

    <AutoCompleteTextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_email"
        android:inputType="textEmailAddress"
        android:layout_above="@+id/password"
        android:layout_marginBottom="10dp"
        android:layout_alignParentStart="true"
        android:textColorHint="@color/franticBlue"
        android:textAlignment="center"
        android:ems="10"
        android:maxLines="1"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:textColorHint="@color/franticBlue"
        android:hint="Password"
        android:textAlignment="center"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/email_sign_in_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="login"
        android:textColor="@color/franticWhite"
        android:id="@+id/email_sign_in_button"
        android:background="@color/franticBlue"
        android:layout_above="@+id/create_account_button"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:textColor="@color/franticWhite"
        android:id="@+id/create_account_button"
        android:background="@color/franticBlue"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
